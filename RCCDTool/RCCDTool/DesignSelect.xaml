<Window x:Name="Design_Selection" x:Class="RCCDTool.DesignSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCCDTool"
        mc:Ignorable="d"
        Title="Design Selection" Height="204.661" Width="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Design" HorizontalAlignment="Left" Margin="41,22,0,0" VerticalAlignment="Top" Height="108" Width="207">
            <Grid x:Name="designSelection" HorizontalAlignment="Right" Margin="0,7,4,3" Width="188">
                <RadioButton x:Name="WS" Content="Within Subjects" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" GroupName="Design"/>
                <RadioButton x:Name="BS" Content="Between Subjects" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top" GroupName="Design"/>
                <RadioButton x:Name="WBS" Content="Within and Between Subjects" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Top" GroupName="Design"/>
            </Grid>
        </GroupBox>
        <Button x:Name="Continue" Content="Continue" HorizontalAlignment="Left" Margin="207,142,0,0" VerticalAlignment="Top" Width="75" Click="Continue_Click"/>

    </Grid>
</Window>
